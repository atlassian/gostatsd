FROM golang:1.17.2-buster AS build
# Keep golang version in sync with MakeFile, .travis.yml, Dockerfile-multiarch-glibc and README.md
WORKDIR /build

# Install dependencies first to take advantage of the docker build cache.
ADD go.mod /build/go.mod
ADD go.sum /build/go.sum

RUN go mod download

ARG TARGETARCH
ARG BINARY_NAME
ARG MAIN_PKG
ARG REPO_VERSION
ARG GIT_HASH
ARG BUILD_DATE

ADD . /build

RUN apt-get update && apt-get install git

RUN FLAGS="-s -X main.Version=${REPO_VERSION} -X main.GitCommit=${GIT_HASH} -X main.BuildDate=${BUILD_DATE}" \
    CGO_ENABLED=0 GOOS=linux GOARCH=${TARGETARCH} go build -o bin/linux/${TARGETARCH}/${BINARY_NAME} -ldflags "${FLAGS}" ${MAIN_PKG}

FROM alpine:3.15.4

RUN apk --no-cache add \
    ca-certificates

ARG TARGETARCH
COPY --from=build /build/bin/linux/${TARGETARCH}/gostatsd /bin/gostatsd

ENTRYPOINT ["gostatsd"]